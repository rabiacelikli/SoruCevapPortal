<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Soru Cevap Portalı</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f2f4f7;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
        }

        .navbar {
            background-color: #5a67d8;
        }

        .navbar-brand {
            color: #fff;
            font-size: 1.5rem;
        }

            .navbar-brand:hover {
                color: #e2e8f0;
            }

        .container {
            margin-top: 50px;
        }

        .table {
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

            .table th, .table td {
                vertical-align: middle;
                padding: 15px;
            }

            .table th {
                background-color: #5a67d8;
                color: #fff;
            }

        .badge {
            border-radius: 12px;
            padding: 5px 10px;
            font-size: 0.875rem;
        }

        .form-control {
            border-radius: 20px;
            margin-bottom: 15px;
        }

        .form-check-inline {
            margin-bottom: 15px;
        }

        .btn {
            border-radius: 25px;
            padding: 8px 20px;
            font-size: 1rem;
            transition: background-color 0.3s, transform 0.3s;
        }

        .btn-primary {
            background-color: #6b73d2;
            border-color: #6b73d2;
        }

            .btn-primary:hover {
                background-color: #5a67d8;
                border-color: #5a67d8;
            }

        .btn-secondary {
            background-color: #a0aec0;
            border-color: #a0aec0;
        }

            .btn-secondary:hover {
                background-color: #718096;
                border-color: #718096;
            }

        .btn-danger {
            background-color: #e53e3e;
            border-color: #e53e3e;
        }

            .btn-danger:hover {
                background-color: #c53030;
                border-color: #c53030;
            }

        .btn-sm {
            padding: 5px 10px;
        }

        #divAddUpdate {
            background-color: #fff;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        #divList {
            margin-bottom: 20px;
        }

        #result {
            display: none;
            margin-top: 15px;
        }

        .alert {
            border-radius: 20px;
            padding: 10px 20px;
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1>Sorular</h1>
        <div class="row">
            <div class="col-md-8" id="divList">
                <div id="progress">
                    <div class="table-responsive">
                        <a href="/Categories">Kategoriler</a> | <span id="catName"></span>
                        <table class="table table-bordered table-hover" id="tbQuestionList">
                            <thead>
                                <tr>
                                    <th>Başlığı</th>
                                    <th>Soru</th>
                                    <th>Durumu</th>
                                    <th>Kayıt T.</th>
                                    <th>Düzenleme T.</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-4" id="divAddUpdate">
                <h4 id="editHeader">Soru Ekle</h4>
                <div class="card shadow mb-4" id="surveycard">
                    <div class="card-body">
                        <div class="mb-2">
                            <label>Soru başlığı</label>
                            <input type="text" class="form-control" id="txtTitle" />
                            <input type="hidden" id="txtId" />
                        </div>
                        <div class="mb-2">
                            <label>Soru</label>
                            <input type="text" class="form-control" id="txtBody" />
                            <input type="hidden" id="txtId" />
                        </div>
                        <div class="mb-2">
                            <label>Soru Kategorisi</label>
                            <select class="form-select" id="cbCategory"></select>
                        </div>
                        <div class="mb-2">
                            <input type="checkbox" class="form-check-inline" id="cbIsActive" />
                            <label>Aktif</label>
                        </div>
                        <div class="mb-2">
                            <a id="btnSave" class="btn btn-success">Kaydet</a>
                            <a id="btnEdit" class="btn btn-primary">Düzenle</a>
                            <a id="btnDelete" class="btn btn-danger">Sil</a>
                            <a id="btnCancel" class="btn btn-warning">Vazgeç</a>
                        </div>
                        <div id="result"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            var ApiBaseUrl = "@ViewBag.ApiBaseUrl";
            var catId = "@ViewBag.CatId";
            QuestionList();
            CategoriList();
            CategoryById();
            $("#btnEdit").hide();
            $("#btnDelete").hide();
            $("#btnCancel").hide();
            $("#surveycard").show();
            $("#questioncard").hide();

            function CategoriList() {
                $.ajax({
                    url: ApiBaseUrl + "Categories",
                    method: "GET",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    contentType: "application/json",
                    success: function (data) {
                        var opt = "";
                        $("#cbCategory").empty();
                        $.each(data, function (i, item) {
                            if (catId == item.id) {
                                opt = '<option value="' + item.id + '" selected>' + item.name + '</option>';
                            } else {
                                opt = '<option value="' + item.id + '">' + item.name + '</option>';
                            }
                            $("#cbCategory").append(opt);
                        });
                    },
                    error: function () { }
                });
            }

            function CategoryById() {
                $.ajax({
                    url: ApiBaseUrl + "Categories/" + catId,
                    method: "GET",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    contentType: "application/json",
                    success: function (data) {
                        $("#catName").html("<b>" + data.name + "<b>");
                    },
                    error: function () { }
                });
            }

            function QuestionList() {
                $.ajax({
                    url: ApiBaseUrl + "Categories/" + catId + "/Questions",
                    method: "GET",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    contentType: "application/json",
                    success: function (data) {
                        QuestionListToTable(data);
                    },
                    error: function () { }
                });
            }

            function QuestionListToTable(data) {
                $("#tbQuestionList tbody").empty();
                var tr = '';
                $.each(data, function (i, item) {
                    var bg = item.isActive ? 'bg-success' : 'bg-danger';
                    tr += '<tr><td>' + item.title + '</td><td>' + item.body + '</td><td><span class="badge ' + bg + '">' + (item.isActive ? 'Aktif' : 'Pasif') + '</span></td><td>' + FormatDate(item.createdAt) + '</td><td>' + FormatDate(item.updatedAt) + '</td>';

                    if (userRoles.includes("Admin")) {
                        tr += '<td><a href="/Answers/' + item.id + '" class="btn btn-primary btn-sm">Cevaplar</a><button class="btn btn-primary btn-sm edit ms-2" id=' + item.id + '>Düzenle</button></td>';
                    } else if (!userRoles.includes("Admin")) {
                        if (item.isActive) {
                            tr += '<td><a href="/Answer/' + item.id + '" class="btn btn-primary btn-sm">Cevapla</a></td>';
                        }
                    }

                    tr += '</tr>';
                });
                $("#tbQuestionList tbody").append(tr);

                if (!userRoles.includes("Admin")) {
                    $("#divAddUpdate").hide();
                    $("#divList").removeClass("col-md-8").addClass("col-md-12");
                    $(".edit").hide();
                }
            }

            function FormatDate(d) {
                var date = new Date(d);
                var day = date.getDate() > 9 ? date.getDate() : '0' + date.getDate();
                var month = date.getMonth() > 9 ? date.getMonth() : '0' + date.getMonth();
                var year = date.getFullYear();
                var hour = date.getHours() > 9 ? date.getHours() : '0' + date.getHours();
                var minute = date.getMinutes() > 9 ? date.getMinutes() : '0' + date.getMinutes();
                var second = date.getSeconds() > 9 ? date.getSeconds() : '0' + date.getSeconds();
                return day + "." + month + "." + year + " " + hour + ":" + minute + ":" + second;
            }

            $("#btnSave").click(function () {
                var userId = "";
                var title = $("#txtTitle").val();
                var body = $("#txtBody").val();
                var categoryId = $("#cbCategory").val();
                var isActive = $("#cbIsActive").is(":checked");
                var question = { Title: title, Body: body, CategoryId: categoryId, IsActive: isActive, UserId: userId };

                $.ajax({
                    url: ApiBaseUrl + "Questions",
                    method: "POST",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    data: JSON.stringify(question),
                    contentType: "application/json",
                    success: function (data) {
                        $("#result").show();
                        if (data.status) {
                            $("#result").removeClass().addClass("alert alert-success");
                            QuestionList();
                        } else {
                            $("#result").removeClass().addClass("alert alert-danger");
                        }
                        $("#result").html(data.message);
                        $("#result").fadeOut(3000);
                    },
                    error: function () { }
                });
            });

            $(document).on("click", ".edit", function () {
                var id = $(this).attr("id");
                $.ajax({
                    url: ApiBaseUrl + "Questions/" + id,
                    method: "GET",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    contentType: "application/json",
                    success: function (data) {
                        $("#txtTitle").val(data.title);
                        $("#txtBody").val(data.body);
                        $("#cbCategory").val(data.categoryId);
                        $("#cbIsActive").prop("checked", data.isActive);
                        $("#txtId").val(data.id);

                        $("#btnSave").hide();
                        $("#btnEdit").show();
                        $("#btnDelete").show();
                        $("#btnCancel").show();
                    },
                    error: function () { }
                });

                $("#divAddUpdate").show();
                $("#surveycard").show();
                $("#editHeader").html("Soru Düzenle");
            });

            $("#btnCancel").click(function () {
                $("#txtTitle").val("");
                $("#txtBody").val("");
                $("#cbCategory").val("");
                $("#cbIsActive").prop("checked", false);
                $("#txtId").val("");
                $("#btnSave").show();
                $("#btnEdit").hide();
                $("#btnDelete").hide();
                $("#btnCancel").hide();
                $("#editHeader").html("Soru Ekle");
            });

            $("#btnDelete").click(function () {
                var id = $("#txtId").val();
                $.ajax({
                    url: ApiBaseUrl + "Questions/" + id,
                    method: "DELETE",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    contentType: "application/json",
                    success: function (data) {
                        $("#result").show();
                        if (data.status) {
                            $("#result").removeClass().addClass("alert alert-success");
                            QuestionList();
                        } else {
                            $("#result").removeClass().addClass("alert alert-danger");
                        }
                        $("#result").html(data.message);
                        $("#result").fadeOut(3000);
                    },
                    error: function () { }
                });
            });

            $("#btnEdit").click(function () {
                var id = $("#txtId").val();
                var title = $("#txtTitle").val();
                var body = $("#txtBody").val();
                var categoryId = $("#cbCategory").val();
                var isActive = $("#cbIsActive").is(":checked");
                var question = { Id: id, Title: title, Body: body, CategoryId: categoryId, IsActive: isActive };

                $.ajax({
                    url: ApiBaseUrl + "Questions/" + id,
                    method: "PUT",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    data: JSON.stringify(question),
                    contentType: "application/json",
                    success: function (data) {
                        $("#result").show();
                        if (data.status) {
                            $("#result").removeClass().addClass("alert alert-success");
                            QuestionList();
                        } else {
                            $("#result").removeClass().addClass("alert alert-danger");
                        }
                        $("#result").html(data.message);
                        $("#result").fadeOut(3000);
                    },
                    error: function () { }
                });
            });
        });
    </script>
</body>
</html>

@{
    ViewData["Title"] = "GetListQuestions";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Soru Cevap Portalı</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f2f4f7;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
        }

        .navbar {
            background-color: #5a67d8;
        }

        .navbar-brand {
            color: #fff;
            font-size: 1.5rem;
        }

            .navbar-brand:hover {
                color: #e2e8f0;
            }

        .container {
            margin-top: 50px;
        }

        .table {
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

            .table th, .table td {
                vertical-align: middle;
                padding: 15px;
            }

            .table th {
                background-color: #5a67d8;
                color: #fff;
            }

        .badge {
            border-radius: 12px;
            padding: 5px 10px;
            font-size: 0.875rem;
        }

        .form-control {
            border-radius: 20px;
            margin-bottom: 15px;
        }

        .btn {
            border-radius: 25px;
            padding: 8px 20px;
            font-size: 1rem;
            transition: background-color 0.3s, transform 0.3s;
        }

        .btn-danger {
            background-color: #e53e3e;
            border-color: #e53e3e;
        }

            .btn-danger:hover {
                background-color: #c53030;
                border-color: #c53030;
            }

        .btn-sm {
            padding: 5px 10px;
        }

        #progress {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Sorular</h1>
        <div class="row">
            <div class="col-md-12">
                <div id="progress">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" id="tbQuestionList">
                            <thead>
                                <tr>
                                    <th>Soru Başlığı</th>
                                    <th>Soru</th>
                                    <th>Kategori</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


@section Scripts{
    <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            var ApiBaseUrl = "@ViewBag.ApiBaseUrl";
            var token = localStorage.getItem("token");
            if (token == "" || token == null) {
                location.href = "/Login";
                return false;
            }
            QuestionList();
            CategoryList();

            function CategoryList() {
                $.ajax({
                    url: ApiBaseUrl + "Categories",
                    method: "GET",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    contentType: "application/json",
                    success: function (data) {
                        console.log(data);
                        $("#category").empty();
                        $.each(data, function (i, item) {
                            var opt = '<option value="' + item.id + '">' + item.name + '</option>';
                            $("#category").append(opt);
                        });
                    },
                    error: function () { }
                });
            }

            function QuestionList() {
                $.ajax({
                    url: ApiBaseUrl + "Questions",
                    method: "GET",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    contentType: "application/json",
                    success: function (data) {
                        QuestionListToTable(data);
                    },
                    error: function () { }
                });
            }

            function QuestionListToTable(data) {
                $("#tbQuestionList tbody").empty();
                var tr = '';
                $.each(data, function (i, item) {
                    var bg = item.isActive ? 'bg-success' : 'bg-danger';
                    tr += '<tr><td>' + item.title + '</td><td>' + item.body + '</td><td>' + item.category + '</td><td><span class="badge ' + bg + '">' + (item.isActive ? 'Aktif' : 'Pasif') + '</span></td>';
                    tr += '<td><button class="btn btn-danger btn-sm btnDelete" data-id="' + item.id + '">Sil</button> ';
                    tr += '<button class="btn btn-info btn-sm btnAnswer" data-id="' + item.id + '">Cevapla</button></td></tr>';
                });
                $("#tbQuestionList tbody").append(tr);
            }

            $("#btnSave").click(function () {
                var question = {
                    title: $("#title").val(),
                    body: $("#body").val(),
                    categoryId: $("#category").val(),
                    isActive: $("#isActive").val() === "true"
                };
                $.ajax({
                    url: ApiBaseUrl + "Questions",
                    method: "POST",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    data: JSON.stringify(question),
                    contentType: "application/json",
                    success: function (data) {
                        alert(data.message);
                        if (data.status) {
                            QuestionList();
                            $("#questionForm")[0].reset();
                        }
                    },
                    error: function () { }
                });
            });

            $(document).on("click", ".btnDelete", function () {
                var id = $(this).data("id");
                if (confirm("Bu soruyu silmek istediğinizden emin misiniz?")) {
                    $.ajax({
                        url: ApiBaseUrl + "Questions/" + id,
                        method: "DELETE",
                        headers: {
                            "Authorization": "Bearer " + token
                        },
                        contentType: "application/json",
                        success: function (data) {
                            alert(data.message);
                            if (data.status) {
                                QuestionList();
                            }
                        },
                        error: function () { }
                    });
                }
            });

            $(document).on("click", ".btnAnswer", function () {
                var id = $(this).data("id");
                window.location.href = '/Answer/' + id;
            });

            $("#btnCancel").click(function () {
                $("#questionForm")[0].reset();
                $("#editHeader").html("Soru Ekle");
            });
        });
    </script>
}
</body>
</html>